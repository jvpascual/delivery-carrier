<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_delivery_carrier_mrw_form" model="ir.ui.view">
        <field name="name">delivery.carrier.mrw.form</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="mrw_carrier_page" string="Setting"
                      attrs="{'invisible':[('delivery_type', '!=', 'mrw')]}">
                    <group>
                        <group name="code_group" string="Authentication values">
                            <field name="mrw_franchise_code"/>
                            <field name="mrw_subscriber_code"/>
                            <field name="mrw_department_code"/>
                            <field name="mrw_username"/>
                            <field name="mrw_password"/>
                        </group>
                        <group name="test_group" string="environment">
                            <field name="mrw_prod_url" widget="text"/>
                            <field name="mrw_test_url" widget="text"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='integration_level']" position="after">
                <field name="mrw_price_method" attrs="{'invisible': ['|', ('delivery_type', '!=', 'mrw')]}"/>
            </xpath>
            <xpath expr="(//page)[1]" position="before">
                <page string="Pricing" attrs="{'invisible': [('delivery_type', '!=', 'mrw')]}">
                    <group attrs="{'invisible':[('mrw_price_method', '!=', 'fixed')]}">
                        <group>
                            <field name="fixed_price"/>
                        </group>
                    </group>
                    <group name="general" attrs="{'invisible':[('mrw_price_method', '!=', 'base_on_rule')]}">
                        <field name="price_rule_ids" nolabel="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
